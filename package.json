{
  "name": "eslint-config-hfreire",
  "description": "My ESLint configuration style rules bible",
  "version": "0.0.0",
  "engines": {
    "node": ">= 6.0.0"
  },
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hfreire/eslint-config-hfreire.git"
  },
  "author": "Hugo Freire <hugo@exec.sh>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hfreire/eslint-config-hfreire/issues"
  },
  "homepage": "https://github.com/hfreire/eslint-config-hfreire#readme",
  "dependencies": {
    "eslint-config-standard": "11.0.0-beta.0"
  },
  "peerDependencies": {
    "eslint": ">=3.19.0",
    "eslint-plugin-json": ">=1.2.0",
    "eslint-plugin-mocha": ">=4.9.0",
    "eslint-plugin-import": ">=2.3.0",
    "eslint-plugin-node": ">=5.0.0",
    "eslint-plugin-promise": ">=3.5.0",
    "eslint-plugin-standard": ">=3.0.1",
    "eslint-plugin-unicorn": ">=2.1.1"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.6.1",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "coveralls": "2.13.3",
    "eslint": "4.14.0",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-json": "1.2.0",
    "eslint-plugin-mocha": "4.12.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.0.1",
    "eslint-plugin-unicorn": "4.0.2",
    "istanbul": "0.4.5",
    "mocha": "5.0.3",
    "semantic-release": "15.0.0",
    "pre-git": "3.17.0",
    "testdouble": "3.3.0"
  },
  "config": {
    "pre-git": {
      "commit-msg": "conventional",
      "allow-untracked-files": true
    }
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  },
  "scripts": {
    "clean": "rm -rf lib coverage",
    "lint": "node_modules/.bin/eslint .",
    "coverage": "node_modules/.bin/istanbul cover --include-all-sources --root src --print detail ./node_modules/mocha/bin/_mocha -- --recursive test",
    "test": "npm run lint && npm run coverage",
    "compile": "npm run clean && mkdir -p lib && ./node_modules/.bin/babel src/ -d lib && mv ./lib/eslint-config-hfreire.js ./lib/index.js",
    "prepublish": "npm run compile",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "semantic-release": "./node_modules/.bin/semantic-release",
    "commit": "./node_modules/.bin/commit-wizard"
  }
}
